extends layout

block content
  h1= title
  form(method="POST", action="")
    .form-group
      label(for="category_name") Category name:
      input#category_name.form-control(
        type="text",
        name="name",
        placeholder="Category name",
        required="true",
        value=undefined === category ? '' : category.name
      )
    .form-group
      label(for="category_description") Description:
      input#category_description.form-control(
        type="text",
        name="description",
        placeholder="Description",
        value=undefined === category ? '' : category.description
      )
    button.btn-submit(type="submit") Submit
  if errors
    ul
      each error in errors
        li error.msg
