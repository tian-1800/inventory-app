extends layout

block content
  h1 #{ title } #{ category.name }
  if category_items.length > 0
    p #[strong Delete the following items before attempting to delete this category]
    div
      h4 Items
      dl 
      each item in category_items
        dt 
          a(href=item.url) #{ item.name }
        dd #{ item.description }
  else
    p Do you really want to delete this category?
    form(method="POST", action="")
      input.form-control(
        type="hidden",
        name="categoryid",
        required="true",
        value=category.id
      )
      button.btn-submit(type="submit") Delete
